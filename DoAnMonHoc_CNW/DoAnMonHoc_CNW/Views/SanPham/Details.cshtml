@{
    ViewBag.Title = "Details";

    Layout = "~/Views/Shared/TrangChu.cshtml";
}


<h2 class="title text-center">Thông tin sản phẩm</h2>

    <div class="col-lg-4">
        <img src="~/Content/SanPham/ImageProduct/@Model.Anh" width="250px" />
    </div>
    <div class="col-lg-8">
        <div class="row" style="margin-right:10px;">

            <div>
                <div class="row" style="padding: 5px;">
                    <h2 style="color: red">Tên sản phẩm: @Model.TenSP</h2>
                </div>
                <div class="row" style="padding: 5px">
                    <h3>Mô Tả:@Model.GioiThieuSP</h3>
                </div>
                <div class="row">
                    <h2 style="color: red">Giá: @Model.GiaBan đ</h2>
                </div>
                <div class="row" style="margin-top: 100px; float: right">
                    <button class="btn btn-danger">
                        <a style="text-decoration: none" href="@Url.Action("ThemGioHang", "GioHang", new { @iMaSP = @Model.MaSP, @strURL = Request.Url.ToString() })">
                            <span style="color: white;">Đặt mua</span>
                        </a>
                    </button>

                    <button class="btn btn-danger">

                        <a href="@Url.Action("Index", "SanPham")" style="color:white">Trở về</a>


                    </button>
                </div>


            </div>

        </div>
    </div>
