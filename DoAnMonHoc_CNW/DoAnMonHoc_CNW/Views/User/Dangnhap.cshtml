@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/SanPham.cshtml";
}

<h4 style="color:red; text-align:center">
    @ViewBag.Thongbao
</h4>
<table align="center">
    <h2 style="text-align: center"> ĐĂNG NHẬP </h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>MẬT KHẨU:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi2"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>ĐĂNG NHẬP:</td>
            <td>
                <input type="Submit" name="Đăng nhập" />
            </td>
        </tr>
    }
</table>