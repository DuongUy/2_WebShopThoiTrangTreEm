@model DoAnMonHoc_CNW.Models.SanPham

@{
    ViewBag.Title = "ThemMoiSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <h2>THÊM SẢN PHẨM MỚI</h2>
@using (Html.BeginForm("ThemMoiSP", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{


        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)


        <div class="editor-label">
            @Html.LabelFor(model => model.TenSP)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenSP)
            @Html.ValidationMessageFor(model => model.TenSP)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DoiTuong)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DoiTuong)
            @Html.ValidationMessageFor(model => model.DoiTuong)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GiaBan)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GiaBan)
            @Html.ValidationMessageFor(model => model.GiaBan)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GioiThieuSP, new { @class = "control-label col-md-2" })


            <div class="col-md-10">
                <textarea name="GioiThieuSP">Mô tả thông tin sản phẩm</textarea>
            </div>
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Soluong)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Soluong)
            @Html.ValidationMessageFor(model => model.Soluong)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Anh, new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                <input type="file" name="fileUpload" />
                @ViewBag.Thongbao
            </div>

        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.NgayCapNhat)
        </div>
        <div class="editor-field">
            <input type="date" name="NgayCapNhat" />
            @Html.ValidationMessageFor(model => model.NgayCapNhat)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaPL, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaPL")
            </div>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.MaPL, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaTH")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm Mới" class="btn btn-default" />
            </div>
        </div>


    </div>
}
    <div>
        @Html.ActionLink("VỀ TRANG QUẢN LÝ", "SanPham")
    </div>
    }
