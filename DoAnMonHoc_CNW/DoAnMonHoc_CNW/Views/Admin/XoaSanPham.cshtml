@model DoAnMonHoc_CNW.Models.SanPham

@{
    ViewBag.Title = "XoaSanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <h3>Bạn có muốn xóa sản phẩm này không?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên Sản Phẩm:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TenSP)
            </dd>
            <dt>
                Giá bán
            </dt>
            <dd>
                @string.Format("{0:0,0}", Model.GiaBan) VNĐ
            </dd>
            <dt>
                Mô tả
            </dt>
            <dd style="width:600px; text-align:justify">
                @Html.DisplayFor(model => model.GioiThieuSP)
            </dd>
            <dt>
                Ảnh
            </dt>
            <dd>
                <img src="~/Content/SanPham/ImageProduct/@Model.Anh" width="200px" height="250px" />
            </dd>
            <dt>
                Ngày Cập Nhật
            </dt>
            <dd>
                @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
            </dd>
            <dt>
                Số lượng tồn
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Soluong)
            </dd>
            <dt>
                Phân Loại Sản Phẩm
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PhanLoai.TenPL)
            </dd>
        </dl>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "SanPham")
        </div>

    }
}